<resources>
    <!-- Colors -->
    <color name="colorMain">#3f51b5</color>
    <color name="colorMainDark">#3949ab</color>
    <color name="colorMainAccent">#ff5722</color>
    <color name="colorMainRow">#5c6bc0</color>
    <color name="colorText">#000000</color>
    <color name="colorTextLight">#FFFFFF</color>
    <color name="colorRowAlternate">#ffccbc</color>

    <color name="navdrawer_background">#FFFFFF</color>
    <color name="tab_background">@color/colorMain</color>
    <color name="tab_color">@color/colorMainAccent</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorMainDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorMainAccent</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat">
    </style>
    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>


    <!-- Misc -->
    <style name="TabIndicator" />

    <integer name="font_textStyle_medium">1</integer> <!-- bold -->

</resources>
