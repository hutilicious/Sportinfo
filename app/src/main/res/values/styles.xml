<resources>
    <!-- Colors -->
    <color name="colorMain">#0277bd</color>
    <color name="colorMainDark">#01579b</color>
    <color name="colorMainAccent">#7b1fa2</color>
    <color name="colorMainRow">#9c27b0</color>
    <color name="colorText">#000000</color>
    <color name="colorTextLight">#FFFFFF</color>
    <color name="colorRowAlternate">#f3e5f5</color>

    <color name="navdrawer_background">#FFFFFF</color>
    <color name="tab_background">@color/colorMain</color>
    <color name="tab_color">#fff</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorMainDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorMainAccent</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat">
    </style>
    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>


    <!-- Misc -->
    <style name="TabIndicator" />

    <integer name="font_textStyle_medium">1</integer> <!-- bold -->

</resources>
