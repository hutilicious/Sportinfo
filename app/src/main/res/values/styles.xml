<resources>
    <!-- Colors -->
    <color name="colorMain">#0277bd</color>
    <color name="colorMainDark">#01579B</color>
    <color name="colorMainAccent">#FF5722</color>
    <color name="colorMainBg">#FAFAFA</color>
    <color name="colorMainRow">#0277bd</color>
    <color name="colorText">#666</color>
    <color name="colorTextNav">#000</color>
    <color name="colorTextLight">#FFFFFF</color>
    <color name="colorRowAlternate">#0F000000</color>
    <color name="colorRowBackground1">#04000000</color>
    <color name="colorRowBackground2">#0c000000</color>
    <color name="colorRowBackgroundGold">#1AD4AF37</color>
    <color name="colorIndicatorGray">#78000000</color>
    <color name="colorIndicatorGold">#FFD4AF37</color>

    <color name="navdrawer_background">#FFFFFF</color>
    <color name="tab_background">@color/colorMain</color>
    <color name="tab_color">#DDFFFFFF</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorMainDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorMainAccent</item>
        <item name="android:windowBackground">@color/colorMainBg</item>

    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>


    <!-- Misc -->
    <integer name="font_textStyle_medium">1</integer> <!-- bold -->

</resources>
