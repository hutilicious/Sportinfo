<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ltGame"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crdScore"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3sp"
        card_view:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:showDividers="middle"
        android:nestedScrollingEnabled="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="#D4AF37"
                android:id="@+id/ltIndicator">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10."
                    android:id="@+id/txtPlace"
                    android:textColor="@color/colorTextLight"
                    android:autoText="false"
                    android:textSize="21dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#1AD4AF37"
                android:id="@+id/ltTeam">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TTC KlingenmÃ¼nster H1"
                    android:id="@+id/txtTeam"
                    android:textSize="16dp"
                    android:gravity="left|center"
                    android:paddingLeft="7dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#1AD4AF37"
                android:id="@+id/ltScore"
                android:baselineAligned="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="29"
                    android:id="@+id/txtScore"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:paddingRight="7dp"
                    android:textColor="@color/colorMainAccent"
                    android:textStyle="bold" />

            </LinearLayout>



        </TableRow>

    </TableLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>