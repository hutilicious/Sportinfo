<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="1dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:showDividers="middle">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="#D4AF37"
                android:id="@+id/ltIndicator">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10."
                    android:id="@+id/txtPlace"
                    android:textColor="@color/colorTextLight"
                    android:autoText="false"
                    android:textSize="21dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#1AD4AF37"
                android:id="@+id/ltTeam">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TTC KlingenmÃ¼nster H1"
                    android:id="@+id/txtTeam"
                    android:textSize="16dp"
                    android:gravity="left|center"
                    android:paddingLeft="7dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#1AD4AF37"
                android:id="@+id/ltScore"
                android:baselineAligned="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="29"
                    android:id="@+id/txtScore"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:paddingRight="7dp"
                    android:textColor="@color/colorMainAccent"
                    android:textStyle="bold" />

            </LinearLayout>



        </TableRow>

    </TableLayout>
</LinearLayout>