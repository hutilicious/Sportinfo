<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameShowCaseMainLayout"
    android:paddingTop="2dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gameShowCaseTable"
        android:stretchColumns="1"
        android:showDividers="middle">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="19:00"
                android:id="@+id/txtTime"
                android:textColor="@color/colorTextLight"
                android:autoText="false"
                android:background="@color/colorMain"
                android:textSize="17dp"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="TTC KlingenmÃ¼nster H1"
                    android:id="@+id/txtTeamHome"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingLeft="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="VFL Bellheim"
                    android:id="@+id/txtTeamGuest"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingLeft="7dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="-"
                    android:id="@+id/txtScoreHome"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingRight="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="-"
                    android:id="@+id/txtScoreGuest"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingRight="7dp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>